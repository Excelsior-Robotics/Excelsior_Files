    tft.drawRectangle(xs+i, ys+i, xe-i, ye-i, color);
  }
  tft.drawPixel(xs,ys,COLOR_BLACK);
  tft.drawPixel(xs,ye,COLOR_BLACK);
  tft.drawPixel(xe,ys,COLOR_BLACK);
  tft.drawPixel(xe,ye,COLOR_BLACK);

  tft.drawPixel(xs + weight,ys + weight,color);
  tft.drawPixel(xs + weight,ye - weight,color);
  tft.drawPixel(xe - weight,ys + weight,color);
  tft.drawPixel(xe - weight,ye - weight,color);

}

